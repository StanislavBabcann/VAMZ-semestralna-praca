<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editPaymentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/showedCategoryTitleEdit"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_edit_payment"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:background="@color/orange"
        android:text="Category of payment: "
        android:textColor="@color/black"
        android:textSize="25sp"


        android:typeface="serif" />

    <RadioGroup
        android:id="@+id/radioGroupEditCategory"
        android:layout_width="150dp"
        android:layout_height="384dp"

        android:layout_below="@id/showedCategoryTitleEdit"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="203dp"
        android:background="@color/white">


        <RadioButton
            android:id="@+id/radio_grocery_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="grocery"
            android:typeface="serif"

            />

        <RadioButton
            android:id="@+id/radio_clothes_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clothes"
            android:typeface="serif"

            />

        <RadioButton
            android:id="@+id/radio_appliances_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="appliances"
            android:typeface="serif"

            />

        <RadioButton
            android:id="@+id/radio_charge_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="charges"
            android:typeface="serif"

            />


        <RadioButton
            android:id="@+id/radio_restaurants_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="restaurants"
            android:typeface="serif"

            />


        <RadioButton
            android:id="@+id/radio_traveling_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="traveling"
            android:typeface="serif"

            />

        <RadioButton
            android:id="@+id/radio_free_time_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="free time"
            android:typeface="serif"

            />

        <RadioButton
            android:id="@+id/radio_other_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="other"
            android:typeface="serif"

            />


    </RadioGroup>

    <TextView
        android:id="@+id/showerPrizeTitleEdit"
        android:layout_width="360dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/radioGroupEditCategory"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/green"
        android:text="Prize of payment: "
        android:textColor="@color/black"
        android:textSize="25sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/showedPrizeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"

        android:textSize="20sp"
        android:typeface="serif"
        android:layout_below="@id/showerPrizeTitleEdit"
        />

    <TextView
        android:id="@+id/showedNoteTitleEdit"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@id/showedPrizeEdit"

        android:background="@color/yellow"
        android:text="Note of payment: "
        android:textColor="@color/black"
        android:textSize="25sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/showedNoteEdit"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_below="@id/showedNoteTitleEdit"
        android:layout_marginStart="16dp"

        android:textColor="@color/black"
        android:textSize="20sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/buttonEditPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showedNoteEdit"

        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="BACK" />

    <Button
        android:id="@+id/editButtonEditPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showedNoteEdit"

        android:layout_marginStart="300dp"
        android:layout_marginTop="0dp"
        android:text="EDIT" />

    <TextView
        android:id="@+id/date_edit_payment"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:typeface="serif" />


</RelativeLayout>